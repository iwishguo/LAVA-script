{
    "actions": [
        {
            "command": "deploy_linaro_image",
            "parameters": {
                "image": "http://images.validation.linaro.org/kvm-debian-wheezy.img.gz"
#"customize": {
#                    "http://images.validation.linaro.org/kvm/large-sid.img.gz": ["rootfs:/pad0", "rootfs:/pad1", "rootfs:/pad2", "rootfs:/pad3", "rootfs:/pad4", "rootfs:/pad5"]
#                }

            }
        },
        {
            "command": "lava_test_shell",
            "parameters": {
                "testdef_repos": [
                    {
                        "git-repo": "http://github.com/iwishguo/LAVA-script.git",
                        "parameters": {
                            "BUILD_OPTS": "",
                            "TARGET": "aarch64-softmmu"
                        },
                        "revision": "master",
                        "testdef": "build-qemu-from-source.yaml"
                    },
                    {
                        "git-repo": "http://git.linaro.org/people/alex.bennee/test-definitions.git",
                        "parameters": {
                            "IMAGE": "http://people.linaro.org/~alex.bennee/images/aarch64-linux-buildroot.img",
                            "KERNEL_ARGS": "console=ttyAMA0",
                            "QEMU_ARGS": "-machine virt -cpu cortex-a57 -machine type=virt -nographic -smp 1 -m 396",
                            "QEMU_BIN": "/usr/local/bin/qemu-system-aarch64",
                            "TESTS": "boot stress"
                        },
                        "revision": "qemu-testing",
                        "testdef": "ubuntu/qemu-system-test.yaml"
                    },
                    {
                        "git-repo": "http://git.linaro.org/people/alex.bennee/test-definitions.git",
                        "parameters": {
                            "IMAGE": "http://people.linaro.org/~alex.bennee/images/aarch64-linux-3.15rc2-aarch32-buildroot.img",
                            "KERNEL_ARGS": "console=ttyAMA0",
                            "QEMU_ARGS": "-machine virt -cpu cortex-a57 -machine type=virt -nographic -smp 1 -m 396",
                            "QEMU_BIN": "/usr/local/bin/qemu-system-aarch64",
                            "TESTS": "boot stress"
                        },
                        "revision": "qemu-testing",
                        "testdef": "ubuntu/qemu-system-test.yaml"
                    }
                ],
                "timeout": 18000
            }
        },
        {
            "command": "submit_results",
            "parameters": {
                "server": "http://validation.linaro.org/RPC2/",
                "stream": "/anonymous/heyi-guo/"
            }
        }
    ],
    "device_type": "kvm",
    "job_name": "build-qemu-master-aarch64-run-uefi-luvOS",
    "timeout": 1800
}

